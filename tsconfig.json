{
  "compilerOptions": {
    "target": "ES2017",                                  
    "module": "commonjs",                                
    "allowJs": true,
    "esModuleInterop": true,                             
    "skipLibCheck": true,       
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators" : true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "./src/@types",
      "./@types",
      "./node_modules/@types"
    ]
    
  },
  "include": [
    "src/**/*.ts"
  ]
}


